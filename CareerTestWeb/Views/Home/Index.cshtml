    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const track = document.querySelector('.personality-track');
            const cards = document.querySelectorAll('.personality-card');
            const nextBtn = document.querySelector('.btn-nav.next');
            const prevBtn = document.querySelector('.btn-nav.prev');
            const carousel = document.querySelector('.personality-carousel');

            // Calculate once and cache
            const cardWidth = cards[0].offsetWidth + parseInt(getComputedStyle(cards[0]).marginRight) * 2;
            const maxPosition = -((cards.length - 4) * cardWidth);

            let position = 0;
            let autoScrollInterval;
            let startX, moveX;

            // Faster auto-scroll: reduced from 2000ms to 1000ms
            const SCROLL_SPEED = 1000;

            // Add CSS transition for smoother animation
            track.style.transition = 'transform 0.3s ease-out';

            function updatePosition() {
                track.style.transform = `translateX(${position}px)`;
            }

            function startAutoScroll() {
                autoScrollInterval = setInterval(() => {
                    position = position <= maxPosition ? 0 : position - cardWidth;
                    updatePosition();
                }, SCROLL_SPEED);
            }

            function stopAutoScroll() {
                clearInterval(autoScrollInterval);
            }

            // Initialize auto-scroll
            startAutoScroll();

            // Next button - optimized
            nextBtn.addEventListener('click', function() {
                stopAutoScroll();
                if (position > maxPosition) {
                    position -= cardWidth;
                    updatePosition();
                }
                startAutoScroll();
            });

            // Previous button - optimized
            prevBtn.addEventListener('click', function() {
                stopAutoScroll();
                if (position < 0) {
                    position += cardWidth;
                    updatePosition();
                }
                startAutoScroll();
            });

            // Hover events - more efficient
            carousel.addEventListener('mouseenter', stopAutoScroll);
            carousel.addEventListener('mouseleave', startAutoScroll);

            // Touch events - optimized for mobile
            track.addEventListener('touchstart', function(e) {
                startX = e.touches[0].clientX;
                stopAutoScroll();
                track.style.transition = 'none'; // Disable transition during drag
            }, { passive: true });

            track.addEventListener('touchmove', function(e) {
                moveX = e.touches[0].clientX;
                const diff = moveX - startX;
                track.style.transform = `translateX(${position + diff}px)`;
            }, { passive: true });

            track.addEventListener('touchend', function() {
                track.style.transition = 'transform 0.3s ease-out'; // Re-enable transition
                const diff = moveX - startX;

                if (Math.abs(diff) > 50) {
                    if (diff > 0 && position < 0) {
                        position += cardWidth;
                    } else if (diff < 0 && position > maxPosition) {
                        position -= cardWidth;
                    }
                }
                updatePosition();
                startAutoScroll();
            });
        });
    </script>

